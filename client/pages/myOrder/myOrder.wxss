
page {
  width: 100%;
  background-color: #A3C4F5;
}
#top-bar {
  width: 90%;
  height: 40rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #fff;
  border-radius: 10rpx;
  border: solid 2rpx black;
  background-color: #c86464;
}
.top-title{
  font-size: 32rpx; 
  font-weight: bold; 
  line-height: 32rpx;
  color: #fff;
}
#top-bar view {
  flex: 1;
  justify-content: left;
}

.menu-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  height: 65rpx;
  padding: 10rpx 40rpx;
  background-color: rgb(255,255,255);
  border-radius: 10rpx;
  border: solid 3rpx;
}
.menu-title{
  font-size: 32rpx; 
  font-weight: bold; 
  line-height: 60rpx;
}
.switch-btn-wrapper {
  height: 60rpx;
  background-color: grey;
  color: white;
  text-align: center;
  border: solid 3rpx black;
  border-radius: 10rpx;
}
.switch-btn-wrapper label {
  display: inline-flex;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  vertical-align: middle;
  justify-content:center;
  border-radius: 10rpx;
}
.cur-menu{
  background-color: #c86464;
  color: #fff;
}
