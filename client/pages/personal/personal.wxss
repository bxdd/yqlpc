page {
  width: 100%;
  height: 100%;
  background: #A3C4F5;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.userinfo-wrapper {
  display: flex;
  flex: 2;
  flex-direction: column;
  align-content: center;
  width: 90%;
  text-align: center;
  justify-content: center;
  background-color: rgb(100, 100, 200);
  margin: 50rpx auto auto auto;
  border: solid 2rpx black;
  border-radius: 10rpx;
}

/* ================= */
.userinfo-avatar {
  display: flex;
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
  border: solid 2rpx black;
  border-radius: 10rpx;
}

.userinfo-nickname {
  display: flex;
  margin-top: 30rpx;
  justify-content: center;
  color: #fff;
}

.usermotto {
  margin-top: 130px;
}


/* ============ */
.my-items {
  flex: 3;
  width: 96%;
  padding: 20rpx;
  flex-direction: column;
}

.item-wrapper {
  width: 90%;
  height: 60rpx;
  padding: 20rpx 20rpx;
  margin:auto;
  line-height: 60rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: space-between;
  background: rgb(230, 180, 182);
  border: solid 2rpx black;
  margin: 50rpx auto auto auto;
  border-radius: 10rpx;
}
.item-wrapper i {
  vertical-align: middle;
  margin-right: 26rpx;
}

#top-bar {
  width: 90%;
  height: 40rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #fff;
  border-radius: 10rpx;
  border: solid 2rpx black;
  background-color: #c86464;
}
.top-title{
  font-size: 32rpx; 
  font-weight: bold; 
  line-height: 32rpx;
  color: #fff;
}
#top-bar view {
  flex: 1;
  justify-content: left;
}