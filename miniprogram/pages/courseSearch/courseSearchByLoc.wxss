/* miniprogram/pages/publishMsg/publishMsg.wxss */
page {
  background: #A3C4F5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
#top-bar {
  width: 90%;
  height: 40rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #fff;
  border-radius: 10rpx;
  border: solid 2rpx black;
  background-color: #c86464;
}
.top-title{
  font-size: 32rpx; 
  font-weight: bold; 
  line-height: 32rpx;
  color: #fff;
}
#top-bar view {
  flex: 1;
  justify-content: left;
}
.top-search-wrapper {
  display: flex;
  width: 100%;
  flex-direction: column; 
  background-color: rgb(100, 100, 200);
  border: solid 2rpx black;
  border-radius: 10rpx;
}
.datetime-wrapper {
  width: 88%;
  margin: 20rpx auto 0rpx auto;
  font-size: 28rpx;
  color: #fff;
  padding: 12rpx 21rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #A3C4F5;
  border: solid 2rpx black;
  border-radius: 10rpx;
  font-weight: 600;
}
.address-wrapper {
  width: 94%;
  margin: 0rpx auto 20rpx auto;
  display: flex;
  flex-direction: row;
}

.point-input {
  flex: 1;
  margin-left: 20rpx;
  height: 35px;
  line-height: 40px;
  color: #353535;
  font-size: 14px;
}

.input-wrapper {
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  height: 35px;
  line-height: 35px;
  padding-left: 10px;
  font-size: 13px;
  border-radius: 10rpx;
  border: solid 2rpx black;
}

.start-icon, .end-icon {
  background-color:rgb(100, 200, 100);
  width: 15px;
  height: 15px;
  line-height: 15px;
  font-size: 12px;
  color: #fff;
  text-align: center;
  border-radius: 2px;
}

.end-icon {
    background-color: rgb(200, 100, 100);
}


.course-type-btn {
  display: flex;
  flex-direction: row;
  width: 100%;
  line-height: 80rpx;
  margin-top: 40rpx;
  background-color: #fff;
  font-size: 32rpx;
}
.course-type-btn view {
  flex: 1;
  text-align: center;
}
.cur-selected {
  color: #00b26a;
  border-bottom: 2rpx solid rgb(200, 100, 100);
}